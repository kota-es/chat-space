.message-box
  .message-box__title
    %p.message-box__title__username 
      = message.user.name
    %p.message-box__title__time 
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.message-box__message
    - if message.content.present?
      = message.content
    = image_tag message.image.url if message.image.present?